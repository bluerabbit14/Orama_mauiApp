<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Orama.Utilities"
             x:Class="Orama.Views.ForgotPassword"
             Title="Forgot Password">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            
            <!-- Custom styles for forgot password page -->
            <Style x:Key="FieldLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                <Setter Property="Margin" Value="0,0,0,8" />
            </Style>
            
            <Style x:Key="FieldBorderStyle" TargetType="Border">
                <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" />
                <Setter Property="StrokeThickness" Value="1" />
                <Setter Property="StrokeShape" Value="RoundRectangle 8" />
                <Setter Property="Padding" Value="0" />
            </Style>
            
            <Style x:Key="ErrorLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="TextColor" Value="Red" />
                <Setter Property="Margin" Value="0,4,0,0" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>
            
            <Style x:Key="SuccessLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="TextColor" Value="Green" />
                <Setter Property="Margin" Value="0,4,0,0" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ScrollView>
        <Grid Padding="20" RowDefinitions="Auto">
            
            <!-- Main Content -->
            <VerticalStackLayout Grid.Row="1" Spacing="30" VerticalOptions="Start">

                <!-- Header -->
                <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Label Text="Forgot Password?" 
                           Style="{StaticResource Headline}" 
                           HorizontalOptions="Center"/>
                    <Label Text="No worries! Enter your email address and we'll send you a reset link." 
                           Style="{StaticResource SubHeadline}" 
                           FontSize="16"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"/>
                </VerticalStackLayout>

                <!-- Forgot Password Form -->
                <VerticalStackLayout Spacing="25">

                    <!-- Error Message -->
                    <Label Text="{Binding ErrorMessage}" 
                           Style="{StaticResource ErrorLabelStyle}"
                           IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}"/>

                    <!-- Success Message -->
                    <Label Text="{Binding SuccessMessage}" 
                           Style="{StaticResource SuccessLabelStyle}"
                           IsVisible="{Binding SuccessMessage, Converter={StaticResource StringToBoolConverter}}"/>

                    <!-- Email Field -->
                    <VerticalStackLayout Spacing="0">
                        <Label Text="Email Address" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource FieldBorderStyle}">
                            <Entry Text="{Binding Email}"
                                   Placeholder="Enter your email address"
                                   Keyboard="Email"
                                   ReturnType="Done"
                                   BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Send Reset Link Button -->
                    <Button Text="Send Reset Link" Command="{Binding SendResetLinkCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                            TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource PrimaryDarkText}}"
                            FontSize="16" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" Margin="0,0,0,0">
                    </Button>

                </VerticalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>