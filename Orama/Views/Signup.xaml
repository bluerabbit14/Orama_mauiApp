<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Orama.Utilities"
             x:Class="Orama.Views.Signup"
             Title="Sign Up">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            
            <!-- Custom styles for signup page -->
            <Style x:Key="FieldLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                <Setter Property="Margin" Value="0,0,0,0" />
            </Style>

            <Style x:Key="FieldBorderStyle" TargetType="Border">
                <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" />
                <Setter Property="StrokeThickness" Value="1" />
                <Setter Property="StrokeShape" Value="RoundRectangle 8" />
                <Setter Property="Padding" Value="0" />
            </Style>

            <Style x:Key="PasswordStrengthLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="Margin" Value="0,0,0,0" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ScrollView>
        <Grid Padding="20" RowDefinitions="*,Auto,*">
            
            <!-- Main Content -->
            <VerticalStackLayout Grid.Row="1" Spacing="10" VerticalOptions="Center">

                <!-- Header -->
                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="Create Account" 
                           Style="{StaticResource Headline}" 
                           HorizontalOptions="Center"/>
                    <Label Text="Join us today and get started" 
                           Style="{StaticResource SubHeadline}" 
                           FontSize="16"
                           HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"/>
                </VerticalStackLayout>

                <!-- Error Message -->
                <Label Text="{Binding ErrorMessage}" 
                       TextColor="Red" 
                       FontSize="12"
                       IsVisible="True"
                       HorizontalOptions="Center"/>

                <!-- Signup Form -->
                <VerticalStackLayout Spacing="20">

                    <!-- Full Name Field -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Full Name *" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource FieldBorderStyle}">
                            <Entry Text="{Binding FullName}"
                                   Placeholder="Enter your full name"
                                   ReturnType="Next"
                                   BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Email Field -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Email Address *" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource FieldBorderStyle}">
                            <Entry Text="{Binding Email}"
                                   Placeholder="Enter your email"
                                   Keyboard="Email"
                                   ReturnType="Next"
                                   BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Password Field -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Password *" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource FieldBorderStyle}">
                            <Entry Text="{Binding Password}"
                                   Placeholder="Create a password"
                                   IsPassword="True"
                                   ReturnType="Next"
                                   BackgroundColor="Transparent"/>
                        </Border>
                        <Label Text="{Binding PasswordStrengthMessage}" 
                               Style="{StaticResource PasswordStrengthLabelStyle}"
                               TextColor="{Binding PasswordStrengthColor}"
                               IsVisible="{Binding PasswordStrengthMessage, Converter={StaticResource StringToBoolConverter}}"/>
                    </VerticalStackLayout>

                    <!-- Confirm Password Field -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Confirm Password *" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource FieldBorderStyle}">
                            <Entry Text="{Binding ConfirmPassword}"
                                   Placeholder="Confirm your password"
                                   IsPassword="True"
                                   ReturnType="Next"
                                   BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Phone Number Field (Optional) -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Phone Number (Optional)" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource FieldBorderStyle}">
                            <Entry Text="{Binding PhoneNumber}"
                                   Placeholder="Enter your phone number"
                                   Keyboard="Telephone"
                                   ReturnType="Next"
                                   BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Terms & Conditions Checkbox -->
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout>
                            <CheckBox IsChecked="{Binding AcceptTerms}" 
                                      VerticalOptions="Start" Margin="0,-10,0,0"/>
                            <HorizontalStackLayout Spacing="2">
                                <Label LineBreakMode="WordWrap" HorizontalOptions="Center" HorizontalTextAlignment="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="I agree to the " FontSize="14"  TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}"/>
                                            <Span Text="Terms &amp; Conditions"
                                                  TextDecorations="Underline"
                                                  FontSize="14"
                                                  FontAttributes="Bold"
                                                  TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}">
                                                <Span.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding ShowTermsCommand}"/>
                                                </Span.GestureRecognizers>
                                            </Span>
                                            <Span Text=" and " FontSize="14" TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}"></Span>
                                            <Span Text="Privacy Policy" 
                                                  TextDecorations="Underline"
                                                  FontSize="14"
                                                  FontAttributes="Bold"
                                                  TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}">
                                                <Span.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding ShowPrivacyCommand}"/>
                                                </Span.GestureRecognizers>
                                            </Span>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </HorizontalStackLayout>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <!-- Sign Up Button -->
                    <Button Text="Create Account" 
                            Command="{Binding SignupCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                            TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource PrimaryDarkText}}"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="50"
                            Margin="0,15,0,0">
                    </Button>

                </VerticalStackLayout>
                
                <Label Text="Â©2025 Orama. All rights reserved." HorizontalOptions="Center" HorizontalTextAlignment="Center"></Label>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>