<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Orama.Utilities"
             x:Class="Orama.Views.Login"
             Title="Login"
             Shell.NavBarIsVisible="False">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ScrollView>
        <Grid Padding="20" RowDefinitions="*,Auto,*">
            
            <!-- Main Content -->
            <VerticalStackLayout Grid.Row="1" Spacing="30" VerticalOptions="Center">

                <!-- App Logo/Title -->
                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="Welcome Back" 
                           Style="{StaticResource Headline}" 
                           HorizontalOptions="Center"/>
                    <Label Text="Login to your account" 
                           Style="{StaticResource SubHeadline}" 
                           FontSize="16"
                           HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"/>
                </VerticalStackLayout>

                <!-- Login Form -->
                <VerticalStackLayout Spacing="20">
                    <!-- Error Message -->
                    <Label Text="{Binding ErrorMessage}" 
                           TextColor="Red" 
                           FontSize="12"
                           IsVisible="True"
                           HorizontalOptions="Center"/>

                    <!-- Email Field -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Email Address" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
                        <Border Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" 
                                StrokeThickness="1" 
                                StrokeShape="RoundRectangle 8">
                            <Entry Text="{Binding Email}"
                                   Placeholder="Enter your email"
                                   Keyboard="Email"
                                   ReturnType="Next"
                                   BackgroundColor="Transparent"
                                   />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Password Field -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Password" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
                        <Border Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" 
                                StrokeThickness="1" 
                                StrokeShape="RoundRectangle 8">
                            <Entry Text="{Binding Password}"
                                   Placeholder="Enter your password"
                                   IsPassword="True"
                                   ReturnType="Done"
                                   BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>


                    <!-- Login Button -->
                    <Button Text="Sign In" 
                            Command="{Binding LoginCommand}"
                            IsEnabled="True"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                            TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource PrimaryDarkText}}"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="50"
                            Margin="0,10,0,0">
                    </Button>

                </VerticalStackLayout>

                <!-- Signup and Forgot Password Links -->
                <VerticalStackLayout Spacing="15" HorizontalOptions="Center">

                    <!-- Forgot Password Link -->
                    <Button Text="Forgot Password?" 
                            Command="{Binding ShowForgotPasswordCommand}"
                            BackgroundColor="Transparent"
                            TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}"
                            FontSize="14"
                            FontAttributes="Bold"
                            BorderWidth="0"
                            Padding="0"/>

                    <!-- Divider -->
                    <Grid>
                        <BoxView HeightRequest="1" 
                                 BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                 VerticalOptions="Center"/>
                        <Label Text="OR" 
                               BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                               FontSize="12"
                               Padding="15,0"
                               HorizontalOptions="Center"/>
                    </Grid>

                    <!-- Signup Link -->
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Label Text="Don't have an account?" 
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                               FontSize="14"/>
                        <Label Text="Sign Up" 
                                BackgroundColor="Transparent"
                                TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}"
                                FontSize="14"
                                FontAttributes="Bold"
                                Padding="0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ShowSignupCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>
                    
                </VerticalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>